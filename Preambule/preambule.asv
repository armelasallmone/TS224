recSignal=decomposition(signal_bruite,Lt);

figure;
subplot(2,2,1);
plot(signal_parole.fcno03fz,'r');
title(['Signal de parole original']);
xlabel('Échantillons');
ylabel('Amplitude');

subplot(2,2,2);
plot(signal_bruite,'y');

